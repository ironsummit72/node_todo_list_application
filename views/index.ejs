    <title>Todo</title>
</head>
<body>
    <h2 class="heading">Todo-Lists</h2>
   <div class="container">
       <ol class="todoul">


       <% for(var i=0; i<ListItems.length; i++){ %>
        
            <li class="todo"><%= ListItems[i] %> </li>
      <%  }%>


          
           
       </ol>

   </div>
   <form action="/" method="post">
       <input type="text" class="todo-inp" name="todos" placeholder="enter your tasks" autocomplete="off" autofocus>
       <button class="submit fa fa-arrow-right"></button>
   </form>
</body>
